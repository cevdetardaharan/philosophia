---
import '../styles/style.css'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import { getLangFromUrl } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const canonicalURL = new URL(Astro.url.pathname, Astro.url);
const { title, description, image } = Astro.props;
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="color-scheme" content="dark light" />
    <link rel="canonical" href={canonicalURL} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@cevdetardaharan" />
    <meta name="twitter:creator" content="@cevdetardaharan" />
    <meta property="og:type" content="article" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:locale" content={lang} />
    <meta property="og:site_name" content="Philosophia.app" />
    <meta property="og:image" content={image.src} />
    <meta property="og:image:type" content=`image/${image.format}` />
    <meta property="og:image:width" content={image.width} />
    <meta property="og:image:height" content={image.height} />
    <meta property="og:image:alt" content={title} />
  </head>
  <body>
    <Header/>
    <main>
      <article>
        <slot />
      </article>
    </main>
    <Footer/>
  </body>
</html>
